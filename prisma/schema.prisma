generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  status      String   // 'active' | 'planned' | 'paused'
  phase       String?  // 'idea' | 'research' | 'build' | 'testing' | 'live' | 'optimizing'
  category    String   // 'directory' | 'leadgen' | 'tool' | 'client' | 'business' | 'event'
  description String?
  revenue     Float?   // monthly estimate
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sites      Site[]
  tasks      Task[]
  nowItems   NowItem[]
  content    Content[]
  research   Research[]
  activities Activity[]

  @@map("projects")
}

model Site {
  id        String   @id @default(cuid())
  domain    String
  projectId String?
  status    String   // 'live' | 'dev' | 'planned'
  techStack String[] // Array of tech stack items
  revenue   Float?   // monthly estimate
  listings  Int?     // for directories
  pages     Int?     // for content sites
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("sites")
}

model Idea {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // 'directory' | 'leadgen' | 'tool' | 'client' | 'business' | 'feature'
  priority    String   // 'low' | 'medium' | 'high'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ideas")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    // 'todo' | 'in-progress' | 'done'
  projectId   String?
  priority    String?   // 'low' | 'medium' | 'high'
  assignee    String?   // 'bart' | 'lisa' | 'jc' | 'wout'
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("tasks")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  tags      String[] // Array of tags
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notes")
}

model NowItem {
  id          String   @id @default(cuid())
  title       String
  meta        String
  tag         String
  description String?
  projectId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("now_items")
}

model Alert {
  id           String    @id @default(cuid())
  title        String
  body         String
  priority     String    // 'low' | 'medium' | 'high'
  resolved     Boolean   @default(false)
  snoozedUntil DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("alerts")
}

model Cost {
  id        String   @id @default(cuid())
  name      String
  amount    Float    // monthly amount in EUR
  category  String   // AI, Hosting, Database, Domains, Infrastructure, Tools, Other
  recurring Boolean  // monthly recurring or one-time
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("costs")
}

model Content {
  id         String   @id @default(cuid())
  title      String
  body       String   // the actual content (markdown)
  type       String   // 'article' | 'product-review' | 'buyers-guide' | 'page' | 'other'
  status     String   // 'draft' | 'review' | 'approved' | 'rejected' | 'live'
  author     String   // 'wout' | 'copycat' | 'lisa' | 'jc' | 'bart'
  targetSite String?  // e.g. 'preppedia.com', 'btw-calculator.be'
  targetPath String?  // e.g. '/guide/best-water-filters'
  projectId  String?
  feedback   String?  // Bart's review notes
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("content")
}

model Research {
  id        String   @id @default(cuid())
  title     String
  body      String   // full markdown content
  type      String   // 'keyword-research' | 'market-analysis' | 'api-research' | 'oracle' | 'competitor' | 'technical' | 'other'
  author    String   // 'wout' | 'lisa' | 'jc' | 'copycat' | 'bart'
  projectId String?
  tags      String?  // comma-separated
  status    String   // 'draft' | 'final' | 'outdated'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("research")
}

model Activity {
  id          String   @id @default(cuid())
  type        String   // 'commit' | 'deploy' | 'task' | 'content' | 'research' | 'alert' | 'system'
  actor       String   // 'bart' | 'lisa' | 'jc' | 'wout' | 'copycat' | 'system'
  title       String
  description String?
  url         String?  // link to commit, deploy, etc
  projectId   String?
  metadata    String?  // JSON string for extra data
  createdAt   DateTime @default(now())

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("activities")
}